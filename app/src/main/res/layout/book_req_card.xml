<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".IndividualGroup.GroupTimeLine">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        android:id="@+id/card_book_req"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/acptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:background="@color/transparent"
                android:clickable="true"
                android:src="@drawable/ic_more_vert_black_24dp" />

            <LinearLayout
                android:id="@+id/linearLayoutMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:id="@+id/nameField">

                        <ImageView
                            android:id="@+id/nameIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/user"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameUser"
                            android:layout_alignRight="@+id/nameIcon"
                            android:layout_marginLeft="7dp"
                            android:text="Request Sender: "
                            android:textColor="#5499C7"
                            android:textSize="15sp"
                            android:background="@color/transparent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reqSender"
                            android:layout_alignRight="@+id/nameUser"
                            android:layout_marginLeft="7dp"
                            android:text="Left Text"
                            android:textColor="#5499C7"
                            android:textSize="15sp"
                            android:background="@color/transparent"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/mailFiedl">

                        <ImageView
                            android:id="@+id/mailIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/bookicon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mailUser"
                            android:layout_alignRight="@+id/mailIcon"
                            android:layout_marginLeft="11dp"
                            android:text="Requested Book: "
                            android:background="@color/transparent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/textColor"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reqBook"
                            android:layout_alignRight="@+id/mailIcon"
                            android:layout_marginLeft="11dp"
                            android:text="Left Text"
                            android:background="@color/transparent"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/textColor"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>




        </RelativeLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>