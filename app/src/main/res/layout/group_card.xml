<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".JoinGroup.join_group">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        android:id="@+id/cardItem"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#36454F"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/medicon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/grad"/>



                    <ImageButton
                        android:id="@+id/delete_cvp"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout="@+id/edit_cvp"
                        android:clickable="true"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:background="@color/transparent"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:id="@+id/nameField">

                        <ImageView
                            android:id="@+id/nameIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/grpname"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameHeader"
                            android:layout_alignRight="@+id/nameIcon"
                            android:layout_marginLeft="7dp"
                            android:text="Left Text"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:background="@color/transparent"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_below="@+id/nameField"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/adminField">

                        <ImageView
                            android:id="@+id/adminIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/admin"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/admin"
                            android:layout_alignRight="@+id/adminIcon"
                            android:layout_marginLeft="7dp"
                            android:text="Left Text"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:background="@color/transparent"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adminField"
                        android:layout_marginTop="3dp"
                        android:id="@+id/membersField">

                        <ImageView
                            android:id="@+id/membersIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/lock"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/grpCode"
                            android:layout_alignRight="@+id/membersIcon"
                            android:layout_marginLeft="7dp"
                            android:text="Left Text"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:background="@color/transparent"
                            />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:layout_below="@+id/linearLayout1"
                android:id="@+id/viewGroup"
                android:height="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                android:fontFamily="sans-serif"
                android:text="Show Group Details"
                android:textColor="@color/textColor"
                android:textSize="13sp" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>