<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Book Details"
        android:textColor="@color/material_blue_grey_95"
        android:textSize="15dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:background="@color/gray_btn_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/bookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Introduction to Automata theory, Fromal Language and Computation"
                android:textColor="@color/com_facebook_messenger_blue"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookAuthors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="John E. Hopcroft, Jeffrey D. Ullman, Rajeev Motwani"
                android:textColor="#35373b"
                android:textSize="14dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Other information"
        android:textColor="#35373b"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Publisher"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/bookPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pearson"
            android:textSize="14dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Edition"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/bookEdition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3rd"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/bookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finite automata, context-free grammars, decidability, and intractability"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Owner"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/bookOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Random guy"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/bookStatus"
            android:textStyle="bold"
            android:textColor="@color/material_green_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="14dp" />
    </LinearLayout>

    <Button
        android:id="@+id/removeBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="Remove from my library"
        android:textSize="13dp" />


</LinearLayout>